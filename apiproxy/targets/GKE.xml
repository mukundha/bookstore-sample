<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<TargetEndpoint name="GKE">
    <DefaultFaultRule name="DefaultFaultRule">
        <Step>
            <FaultRules/>
            <Name>remove-namespaces</Name>
        </Step>
        <Step>
            <Condition>(verb != "GET" AND contentformat == "application/json") OR (verb == "GET" AND acceptformat !~ "*/xml")</Condition>
            <FaultRules/>
            <Name>xml-to-json</Name>
        </Step>
        <Step>
            <Condition>(verb != "GET" AND contentformat == "application/json") OR (verb == "GET" AND acceptformat !~ "*/xml")</Condition>
            <FaultRules/>
            <Name>get-response-soap-body</Name>
        </Step>
        <Step>
            <Condition>(verb != "GET" AND contentformat != "application/json") OR (verb == "GET" AND acceptformat ~ "*/xml")</Condition>
            <FaultRules/>
            <Name>get-response-soap-body-xml</Name>
        </Step>
        <Step>
            <Condition>(verb != "GET")</Condition>
            <FaultRules/>
            <Name>return-generic-error</Name>
        </Step>
        <Step>
            <Condition>(verb == "GET")</Condition>
            <FaultRules/>
            <Name>return-generic-error-accept</Name>
        </Step>
        <AlwaysEnforce>false</AlwaysEnforce>
    </DefaultFaultRule>
    <Description>SOAP target generated from undefined</Description>
    <FaultRules/>
    <Flows/>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>set-target-url</Name>
            </Step>
        </Request>
        <Response>
            <Step>
                <FaultRules/>
                <Name>remove-namespaces</Name>
            </Step>
            <Step>
                <Condition>(verb != "GET" AND contentformat == "application/json") OR (verb == "GET" AND acceptformat !~ "*/xml")</Condition>
                <FaultRules/>
                <Name>xml-to-json</Name>
            </Step>
            <Step>
                <Condition>(verb != "GET" AND contentformat == "application/json") OR (verb == "GET" AND acceptformat !~ "*/xml")</Condition>
                <FaultRules/>
                <Name>get-response-soap-body</Name>
            </Step>
            <Step>
                <Condition>(verb != "GET" AND contentformat != "application/json") OR (verb == "GET" AND acceptformat ~ "*/xml")</Condition>
                <FaultRules/>
                <Name>get-response-soap-body-xml</Name>
            </Step>
            <Step>
                <Condition>(verb != "GET")</Condition>
                <FaultRules/>
                <Name>set-response-soap-body</Name>
            </Step>
            <Step>
                <Condition>(verb == "GET")</Condition>
                <FaultRules/>
                <Name>set-response-soap-body-accept</Name>
            </Step>
            <Step>
                <Name>SetBackendHeader</Name>
            </Step>
        </Response>
    </PreFlow>
    <HTTPTargetConnection>
        <LoadBalancer>
            <MaxFailures>0</MaxFailures>
            <RetryEnabled>true</RetryEnabled>
            <Server name="k8s">
                <IsEnabled>true</IsEnabled>
                <IsFallback>false</IsFallback>
                <Weight>1</Weight>
            </Server>
            <TargetDisableSecs>300</TargetDisableSecs>
        </LoadBalancer>
        <Path>/jaxws-endpoint/EBookStoreImplService</Path>
        <Properties/>
    </HTTPTargetConnection>
</TargetEndpoint>